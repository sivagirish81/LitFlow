# -----------------------------
# LitFlow local environment
# Copy this file to .env and edit values.
# -----------------------------

# API / Worker
LITFLOW_API_ADDR=:8080
LITFLOW_TEMPORAL_ADDRESS=localhost:7233
LITFLOW_TEMPORAL_TASK_QUEUE=litflow
LITFLOW_POSTGRES_URL=postgres://litflow:litflow@localhost:5432/litflow?sslmode=disable
LITFLOW_DATA_IN=./data/in
LITFLOW_DATA_OUT=./data/out

# Pipeline tuning
LITFLOW_CHUNK_SIZE=1200
LITFLOW_CHUNK_OVERLAP=200
LITFLOW_EMBED_DIM=1536
LITFLOW_EMBED_VERSION=v1
LITFLOW_PROVIDER_COOLDOWN_SECONDS=900
LITFLOW_INGEST_MAX_CHILDREN=3

# Providers
LITFLOW_LLM_PROVIDERS=mock
LITFLOW_EMBED_PROVIDERS=mock|ollama:nomic|ollama:bge
OPENAI_API_KEY=
GROQ_API_KEY=
LITFLOW_GROQ_MODEL=llama-3.1-8b-instant
LITFLOW_OLLAMA_BASE_URL=http://localhost:11434
LITFLOW_OLLAMA_EMBED_MODEL=nomic-embed-text

# Optional alias keys
LITFLOW_OPENAI_KEY_MAIN=
LITFLOW_GROQ_KEY_FREE1=
LITFLOW_OLLAMA_EMBED_MODEL_NOMIC=nomic-embed-text
LITFLOW_OLLAMA_EMBED_MODEL_BGE=bge-small-en-v1.5

# Web
NEXT_PUBLIC_LITFLOW_API_BASE=http://localhost:8080

# Docker compose DB credentials (local dev only)
LITFLOW_POSTGRES_DB=litflow
LITFLOW_POSTGRES_USER=litflow
LITFLOW_POSTGRES_PASSWORD=litflow
LITFLOW_POSTGRES_HOST=postgres
LITFLOW_POSTGRES_PORT=5432
